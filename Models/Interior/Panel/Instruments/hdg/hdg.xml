<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>hdg.ac</path>

  <animation>
    <object-name>HDGneedle</object-name>
    <object-name>HDGpointer</object-name>

    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Bell-P-59/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>HDGneedle</object-name>
    <object-name>HDGpointer</object-name>
    <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>texrotate</type>
    <object-name>HDGneedle</object-name>
    <property>instrumentation/heading-indicator/indicated-heading-deg</property>
    <axis>
      <x>  0.0 </x>
      <y>  0.0 </y>
      <z> -1.0 </z>
    </axis>
    <center>
      <x> 0.5 </x>
      <y> 0.5 </y>
    </center>
  </animation>

</PropertyList>
